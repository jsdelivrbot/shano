{% if label_hidden %}
    {% if multiple %}
        <div{{ attributes }}>
            {% for item in items %}
                <div class="pdp-header-img">
                    {{ item.content }}
                </div>
            {% endfor %}
        </div>
    {% else %}
        {% for item in items %}
            <div class="pdp-header-img">
                {{ item.content }}
            </div>
        {% endfor %}
    {% endif %}
{% else %}
    <div{{ attributes }}>
        <div{{ title_attributes }}>{{ label }}</div>
        {% if multiple %}
        <div>
            {% endif %}
            {% for item in items %}
                <div class="pdp-header-img">
                    {{ item.content }}
                </div>
            {% endfor %}
            {% if multiple %}
        </div>
        {% endif %}
    </div>
{% endif %}