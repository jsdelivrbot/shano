{#
/**
 * This template is used when viewing the wovi form section.
 *
 * Available variables:
 * - form: A list of all form elements.
 *
 * @ingroup themeable
 */
#}
<div{{ attributes }}>
    <div class="container">
        <div class="row">
            {% if elements.headline %}
                <div class="col-xs-12">
                    <h2 class="form-hl text-center font-size-m">{{ elements.headline }}</h2>
                </div>
            {% endif %}
            {% if elements.subline %}
                <div class="col-xs-12">
                    <p class="form-sl text-center font-size-s">{{ elements.subline }}</p>
                </div>
            {% endif %}
            {# Wrap smaller on large BP #}
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="col-xs-12 col-sm-6">{{ elements.adressnumber }}</div>
                    <div class="col-xs-12 col-sm-6">{{ elements.editorialStaff }}</div>
                </div>
            </div>
            <div class="col-xs-12"><h2 class="form-hl text-center font-size-m">{{ elements.journalist["#title"] }}</h2>
            </div>
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="col-xs-12">{{ elements.journalist }}</div>
                </div>
            </div>
            <div class="col-xs-12"><h2
                        class="form-hl text-center font-size-m">{{ elements.shippingMethod["#title"] }}</h2>
            </div>
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="col-xs-12">{{ elements.shippingMethod }}</div>
                </div>
            </div>
            <div class="col-xs-12"><h2 class="form-hl text-center font-size-m">{{ elements.topics["#title"] }}</h2>
            </div>
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="col-xs-12">{{ elements.topics }}</div>
                </div>
            </div>
            <div class="col-xs-12"><h2 class="form-hl text-center font-size-m">{{ elements.printed["#title"] }}</h2>
            </div>
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <div class="row">
                    <div class="col-xs-12">{{ elements.printed }}</div>
                </div>
            </div>

        </div>
    </div>
</div>
