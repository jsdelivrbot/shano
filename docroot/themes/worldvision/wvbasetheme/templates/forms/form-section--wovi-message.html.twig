{#
/**
 * This template is used when viewing the wovi form section.
 *
 * Available variables:
 * - form: A list of all form elements.
 *
 * @ingroup themeable
 */
#}
<div{{ attributes.addClass('container') }}>
    <div class="row">
        {% if elements.headline %}
            <div class="col-xs-12">
                <h2 class="form-hl text-center font-size-m">{{ elements.headline }}</h2>
            </div>
        {% endif %}
        {# Wrap smaller on large BP #}
        <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
            <div class="row">
                {% if elements.subline %}
                    <div class="col-xs-12 text-center"><p class="font-size-xs font-color-highlighted">{{ elements.subline }}</p></div>
                {% endif %}
                {# TODO @Voegler form-group has to be generated #}
                <div class="col-xs-12 form-group">{{ elements.message }}</div>
            </div>
        </div>
    </div>
</div>
