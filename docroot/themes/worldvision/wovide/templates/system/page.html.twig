{% extends "@beaufix/system/page.html.twig" %}

{% block footer %}
  <footer>
    <div class="footer-contact">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-4 text-center contact-block">
            <p class="h6">Kontakt</p>
            <p class="highlighted"><strong>0800 - 0 10 20 22</strong></p>
            <p>Mo. - Fr. von 8:00 - 20:00 Uhr - <strong>kostenfrei</strong></p>
            <p>E-Mail: <a class="link-underlined" href="mailto:info@worldvision.de">info&commat;worldvision.de</a></p>
          </div>
          <div class="col-xs-12 col-sm-4 text-center contact-block social-channels">
            <p class="h6">Folgen Sie uns</p>
            <ul class="list-unstyled list-inline vert-offset-top-1">
              <li><a target="_blank" class="btn-icon-round facebook"
                     href="https://www.facebook.com/world.vision.deutschland"><i class="icon-facebook"></i></a></li>
              <li><a target="_blank" class="btn-icon-round twitter" href="https://twitter.com/WorldVisionDE"><i
                    class="icon-twitter"></i></a></li>
              <li><a target="_blank" class="btn-icon-round google-plus"
                     href="https://plus.google.com/101390137686937469084/posts"><i class="icon-google-plus"></i></a>
              </li>
              <li><a target="_blank" class="btn-icon-round xing"
                     href="https://www.xing.com/communities/groups/world-vision-1061801"><i class="icon-xing"></i></a>
              </li>
            </ul>
          </div>
          <div class="col-xs-12 col-sm-4 text-center contact-block newsletter form-rounded">
            <form method="POST" action="/formulare/newsletter">
              <p class="h6">Newsletter</p>
              <p class="text-center">Den World Vision Newsletter abonnieren</p>
              <div class="col-xs-9 col-no-padding">
                <div class="form-group"><input id="email" name="email" placeholder="E-Mail Adresse" class="form-control"
                                               type="text">
                </div>
              </div>
              <div class="col-xs-3">
                <button class="btn-icon-round"><i class="icon-arrow-right"></i></button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <div class="footer-prizes">
