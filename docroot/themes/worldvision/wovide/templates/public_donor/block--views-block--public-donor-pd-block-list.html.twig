{% set classes = [
'block',
'block-' ~ configuration.provider|clean_class,
'block-' ~ plugin_id|clean_class
] %}
<div{{ attributes.addClass(classes) }}>
    {% block content %}
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2 class="text-align-center"><span class="thin-header">{{ 'All' |trans }}</span> {{ 'public donors' |trans }}</h2>
                </div>
            </div>
        </div>

        {{ content }}
    {% endblock %}
</div>