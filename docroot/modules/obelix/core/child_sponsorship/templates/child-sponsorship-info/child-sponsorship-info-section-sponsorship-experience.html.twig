<div class="editorial-page child-sponsorship-info-sponsorship-experience position-container">
  <div class="anchor" id="patenschaft-erleben"></div>

  {# Intro  #}
  <div
    class="vert-offset-bottom-2 vert-offset-top-1 vert-offset-sm-top-2 vert-offset-sm-bottom-3">
    <div class="container">
      <div class="row">
        <div class="col-xs-12 text-center">
          <h3 class="font-size-xs text-color-neutral">Contact with sponsored child</h3>
          <h2 class="font-size-xl">Join your sponsored child on its way to a brighter future</h2>
          <p class="font-size-xs vert-offset-top-1">You know exactly which child you support and where it lives.
            You are kept <strong>up-to-date</strong> about its development and the success of the project. You
            can <strong>write to</strong> and even <strong>visit</strong> your sponsored child. With a sponsorship
            you not only enrich the lives of others, but also your own.
          </p>
          <div class="vert-offset-top-1">
            <a class="btn btn-beauty btn-transparent" href="/kinderpatenschaft/informieren/kontakt-zum-kind" target="offcanvas">Learn more</a>
          </div>
        </div>
      </div>
    </div>
  </div>

  {# My Worldvision Video #}
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <div class="editorial--content img-content">
          <div class="item-1 editorial-youtube-video editorial--content" id="editorial-youtube-video-1">
            <div{{ content_attributes.addClass('embed-responsive', 'embed-responsive-16by9') }}>
              <div id="yt-container-{{ id }}"
                   class="yt-container embed-responsive-item"
                   data-entity-id="{{ id }}"
                   data-yt-id="{{ youtube_id }}"></div>
              <button class="btn-icon btn-close yt-close"><i class="icon-cross"></i></button>
            </div>
            <div class="yt-preview">
              <div class="yt-preview-img">
                <picture>
                  <source media="(max-width: 767px)"
                          srcset="{{ base_path ~ module_path }}/assets/child-sponsorship-info/img/sponsorship-experience-video-xs.jpg">
                  <source media="(min-width: 768px) and (max-width: 991px)"
                          srcset="{{ base_path ~ module_path }}/assets/child-sponsorship-info/img/sponsorship-experience-video-sm.jpg">
                  <source media="(min-width: 992px)"
                          srcset="{{ base_path ~ module_path }}/assets/child-sponsorship-info/img/sponsorship-experience-video-md.jpg">
                  <!---Fallback--->
                  <img class="img-responsive img-fullsize"
                       src="{{ base_path ~ module_path }}/assets/child-sponsorship-info/img/sponsorship-experience-video-sm.jpg"
                       srcset="{{ base_path ~ module_path }}/assets/child-sponsorship-info/img/sponsorship-experience-video-sm.jpg"
                       alt="">
                </picture>


                <button class="btn-icon yt-play v-h-align-center-abs"><i class="icon-play"></i></button>
              </div>
              <div class="yt-preview-txt">
                <h3 class="font-size-l">My sponsor experience</h3>
                <p class="font-size-xs">My World Vision - Sponsorship up close and personal.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>

